<?xml version="1.0" encoding="utf-8"?>

<!--Adapted from the Fall 2017 SEG2105 Lab7 Solutions-->

<!--This XML layout sets the appearance of a single chore item-->

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="?android:attr/listPreferredItemHeight">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="270dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="vertical"
            android:padding="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="5dp">

            <TextView
                android:id="@+id/itemName"
                android:layout_width="fill_parent"
                android:layout_height="26sp"
                android:ellipsize="marquee"
                android:singleLine="true"
                android:text="Chore Name"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/itemDescription"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:text="Example Chore Description"
                android:textSize="14sp"
                android:textStyle="italic" />
        </LinearLayout>

        <ImageView
            android:id="@+id/markChore"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center|right"
            android:layout_margin="6dp"
            android:layout_marginBottom="6dp"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_marginTop="6dp"
            android:contentDescription="Chore Icon Image"
            android:src="@drawable/not_completed_time" />
    </LinearLayout>

</RelativeLayout>